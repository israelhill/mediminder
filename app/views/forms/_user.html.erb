<head>
  <title>Mediminder</title>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

<%= render partial: 'layouts/navbar' %>
<br><br>
<div class="container user-form" id="user-form">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h3 class="panel-title">User Form</h3>
          </div>
          <div class="panel-body">
            <h3>Caregiver Information:</h3>
            <div class="row">
              <div class="col-lg-6 pull-left">
                <input class="form-control user-first-name" type="text" placeholder="First Name" value="<%= $user_first_name %>">
              </div>
              <div class="col-lg-6 pull right">
                <input class="form-control user-last-name" type="text" placeholder="Last Name" value="<%= $user_last_name %>">
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-lg-6">
                <input class="form-control user-phone" type="text" placeholder="Phone Number">
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-lg-6">
                <input class="form-control user-email" type="email" placeholder="Email">
              </div>
            </div>
            <hr>
            <h3>Child Information:</h3>
            <div class="row">
              <div class="col-lg-6 pull-left">
                <input class="form-control child-first-name" type="text" placeholder="First Name">
              </div>
              <div class="col-lg-6 pull right">
                <input class="form-control child-last-name" type="text" placeholder="Last Name">
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-lg-6">
                <input class="form-control child-phone" type="text" placeholder="Phone Number">
              </div>
              <div class="col-lg-6">
                <div class="dropdown">
                  <button class="btn btn-primary btn-block dropdown-toggle relationship-type-button" type="button" data-toggle="dropdown">Your Relationship with Child
                    <span class="caret"></span></button>
                  <ul class="dropdown-menu relationship-ul">
                    <li class="relationship"><a>Mother</a></li>
                    <li class="relationship"><a>Father</a></li>
                  </ul>
                </div>
              </div>
            </div>
            <hr>
            <h3>Drug Information:</h3>
            <div class="row">
              <div class="col-lg-6 pull-left">
                <input class="form-control drug-1-name" type="text" placeholder="Drug Name">
              </div>
              <div class="col-lg-6 pull-right">
                <input class="form-control drug-1-dosage" type="text" placeholder="Dosage">
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-lg-6 pull-right">
                <%= render 'layouts/time_list', :drug_id => 'drugFreqList1' %>
              </div>
              <div class="col-lg-6 pull-left">
                <input class="form-control drug-1-freq" type="number" placeholder="Frequency">
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-lg-6 pull-left">
                <input class="form-control drug-2-name" type="text" placeholder="Drug Name">
              </div>
              <div class="col-lg-6 pull-right">
                <input class="form-control drug-2-dosage" type="text" placeholder="Dosage">
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-lg-6 pull-right">
                <%= render 'layouts/time_list', :drug_id => 'drugFreqList2' %>
              </div>
              <div class="col-lg-6 pull-left">
                <input class="form-control drug-2-freq" type="number" placeholder="Frequency">
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-lg-6 pull-left">
                <input class="form-control drug-3-name" type="text" placeholder="Drug Name">
              </div>
              <div class="col-lg-6 pull-right">
                <input class="form-control drug-3-dosage" type="text" placeholder="Dosage">
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-lg-6 pull-right">
                <%= render 'layouts/time_list', :drug_id => 'drugFreqList3' %>
              </div>
              <div class="col-lg-6 pull-left">
                <input class="form-control drug-3-freq" type="number" placeholder="Frequency">
              </div>
            </div>
            <br>
            <div class="col-lg-6 col-lg-offset-3">
              <button class="btn btn-block btn-primary submit-form-button">
                Submit
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


<style>
    body, html {
      background-color: #3b4b54; width : 100%;
    }
</style>